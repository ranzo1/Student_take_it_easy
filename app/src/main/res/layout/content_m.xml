<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_m"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ranzo1.student_app.mainActivities.MActivity"
    tools:showIn="@layout/app_bar_m"
    android:background="@drawable/ic_bacgroundstudent"
   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="@color/colorPrimary">

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"


        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_view"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            app:lottie_fileName="fail.json"
            app:lottie_loop="true"
            android:layout_above="@+id/card2" />

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="140dp"
            android:layout_height="110dp"

            android:layout_marginRight="7dp"
            card_view:cardBackgroundColor="#fffefe"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="5dp"
            android:id="@+id/card2"

            android:layout_alignTop="@+id/card"
            android:layout_alignLeft="@+id/card3"
            android:layout_alignStart="@+id/card3">

            <RelativeLayout

                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView

                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Events"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true" />

                <Button


                    android:id="@+id/idevents"
                    android:layout_width="60dp"
                    android:layout_height="60dp"

                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:background="@drawable/ic_new_calendar" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>




        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="140dp"
            android:layout_height="110dp"

            card_view:cardBackgroundColor="#fffefe"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="5dp"
            android:id="@+id/card"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="13dp"
            android:layout_above="@+id/card6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="Subjects"
                    android:textColor="@color/colorPrimary"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <Button

                    android:id="@+id/idsubjects"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:background="@drawable/ic_book" />


            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="140dp"
            android:layout_height="110dp"

            card_view:cardBackgroundColor="#fffefe"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="5dp"
            android:id="@+id/card6"

            android:layout_above="@+id/card5"
            android:layout_alignLeft="@+id/card"
            android:layout_alignStart="@+id/card"
            android:layout_marginBottom="12dp">

            <RelativeLayout

                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView

                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Timetable"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true" />

                <Button

                    android:id="@+id/idtimetable"
                    android:background="@drawable/ic_blackboard"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"


                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

            </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="140dp"
            android:layout_height="110dp"

            card_view:cardBackgroundColor="#fffefe"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="5dp"
            android:id="@+id/card5"
            android:layout_marginBottom="13dp"

            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/card6"
            android:layout_alignStart="@+id/card6">


            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="5dp">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="Files"
                    android:textColor="@color/colorPrimary"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <Button

                    android:id="@+id/idfiles"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"

                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_file" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="140dp"
            android:layout_height="110dp"

            card_view:cardBackgroundColor="#fffefe"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="5dp"
            android:id="@+id/card4"

            android:layout_alignTop="@+id/card5"
            android:layout_alignLeft="@+id/card3"
            android:layout_alignStart="@+id/card3">


            <RelativeLayout

                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView

                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grades"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true" />

                <Button

                    android:id="@+id/calculator"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"

                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_calculation" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="140dp"
            android:layout_height="110dp"

            card_view:cardBackgroundColor="#fffefe"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="5dp"
            android:id="@+id/card3"

            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:layout_alignTop="@+id/card6"
            android:layout_toRightOf="@+id/card6"
            android:layout_toEndOf="@+id/card6">

            <RelativeLayout

                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView

                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notes"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true" />

                <Button
                    android:id="@+id/idnotes"
                    android:background="@drawable/ic_note"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_width="60dp"
                    android:layout_height="60dp"

                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="27dp" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>




    </RelativeLayout>




</RelativeLayout>
