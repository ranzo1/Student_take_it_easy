<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.ranzo1.student_app.other.LoginActivity"
    android:background="@drawable/ic_bacgroundstudent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_alignParentLeft="true"
        android:background="@color/colorPrimary"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">




        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_view1"
            android:layout_width="250dp"
            android:layout_height="170dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            app:lottie_fileName="fail.json"
            app:lottie_loop="true" />








    </RelativeLayout>




    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="280dp"
        android:layout_height="230dp"

        card_view:cardBackgroundColor="#fffefe"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="8dp"
        android:id="@+id/card3"

        android:layout_marginBottom="107dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <info.hoang8f.widget.FButton


                android:id="@+id/skipBtn"
                android:layout_width="200dp"

                android:layout_height="wrap_content"
                android:layout_below="@+id/gmailBtn"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp"
                android:text="Skip"
                android:textColor="#fff"
                fbutton:buttonColor="@color/colorPrimary"

                fbutton:cornerRadius="5dp"
                fbutton:shadowColor="#3b5c44"
                fbutton:shadowEnabled="true"
                fbutton:shadowHeight="5dp" />

            <info.hoang8f.widget.FButton

                android:id="@+id/gmailBtn"
                android:layout_width="200dp"
                android:layout_height="wrap_content"


                android:layout_alignLeft="@+id/skipBtn"
                android:layout_alignStart="@+id/skipBtn"
                android:layout_below="@+id/textView6"
                android:layout_marginTop="31dp"
                android:text="Gmail"
                android:textColor="#fff"
                fbutton:buttonColor="@color/colorPrimary"

                fbutton:cornerRadius="5dp"
                fbutton:shadowColor="#3b5c44"
                fbutton:shadowEnabled="true"
                fbutton:shadowHeight="5dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="21dp"
                android:text="Welcome!"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>



</RelativeLayout>
