<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    >


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="8dp"
        card_view:cardBackgroundColor="#f9f9f9"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="5dp"
        android:id="@+id/cardViewNote"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="match_parent"
            app:srcCompat="@color/color4"
            android:id="@+id/drugi"



            android:layout_height="12dp" />

        <RelativeLayout

            android:id="@+id/relativeLayout13"
            android:layout_height="130dp"
            android:layout_marginTop="13dp"
            android:paddingLeft="5dp"
            android:paddingRight="40dp"
            android:layout_width="130dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">


            <TextView
                android:text="TextView"
                android:textColor="#050505"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/shortNameeee"

                android:textSize="12sp"
                android:layout_below="@+id/datum"
                />

            <TextView
                android:text="TextView"
                android:textColor="#050505"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/datum"
                android:textSize="10sp"
                />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:textSize="12sp"
                android:textColor="#050505"
                android:lines="3"

                android:layout_marginTop="11dp"
                android:layout_below="@+id/title_notes"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView

                android:text="TextView"
                android:textStyle="bold"
                android:textSize="13sp"
                android:lines="2"
                android:textColor="#050505"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/title_notes"
                android:layout_below="@+id/shortNameeee"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />



        </RelativeLayout>


        </android.support.v7.widget.CardView>





</RelativeLayout>
