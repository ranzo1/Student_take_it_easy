<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/activity_add_grade"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ranzo1.student_app.add_and_update.AddGradeActivity"
    android:background="@drawable/ic_bacgroundstudent"




   >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#46838383"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <RelativeLayout
            android:id="@+id/relativeLayout7"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:background="@drawable/ic_circle"

            android:layout_centerInParent="true"
           >

            <RelativeLayout

                android:background="@drawable/ic_calculation_empty"
                android:layout_width="110dp"
                android:layout_height="110dp"


                android:id="@+id/relativeLayout6"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true">

            </RelativeLayout>

            <TextView
                android:textSize="20sp"
                android:id="@+id/textView3"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#2a4531"
                android:text="Calculate your grades!"
                android:layout_below="@+id/relativeLayout6"
                android:layout_centerHorizontal="true" />

            <TextView
                android:textSize="13sp"
                android:textColor="#2a4531"

                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Record points from projects,tests,etc..."
                android:layout_below="@+id/textView3"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        app:backgroundTint="@color/colorPrimary"
        app:rippleColor="#89ba97"
        android:src="@mipmap/ic_pencil_floating_btn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/addGrade"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/listViewGradess"
        android:layout_alignEnd="@+id/listViewGradess" />

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/appBarLayout">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <ListView
        android:id="@+id/listViewGradess"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"

        android:layout_below="@+id/appBarLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/addGrade" />



    </RelativeLayout>

</RelativeLayout>
