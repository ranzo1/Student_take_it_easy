<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="260dip"
    android:orientation="vertical"

    android:id="@+id/floatingactivity">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        card_view:cardBackgroundColor="#f9f9f9"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="8dp"
        android:id="@+id/cardViewtimeTable"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/txtV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Android"
            android:textStyle="bold"
            android:textColor="#030303"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimary"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_margin="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="20dp">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/editTextEnd"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextStart"
                android:ems="10"
                android:hint="End"
                android:inputType="time"
                app:met_floatingLabel="normal"
                app:met_iconLeft="@mipmap/ic_clock"
                app:met_iconPadding="3dp"
                app:met_primaryColor="#000" />

            <Button
                android:id="@+id/Edit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#00ffffff"
                android:text="OK"
                android:layout_below="@+id/sad"
                android:layout_centerHorizontal="true" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/sad"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextEnd"
                android:ems="10"
                android:hint="About"
                android:inputType="none"
                android:singleLine="true"
                app:met_floatingLabel="normal"
                app:met_iconLeft="@mipmap/ic_about"
                app:met_iconPadding="3dp"
                app:met_primaryColor="#000" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/editTextStart"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:ems="10"
                android:hint="Start"
                android:inputType="time"
                app:met_floatingLabel="normal"
                app:met_iconLeft="@mipmap/ic_clock"
                app:met_iconPadding="3dp"
                app:met_primaryColor="#000" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>