<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_timetable"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ranzo1.student_app.mainActivities.TimetableActivity"
    tools:showIn="@layout/activity_timetable"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_bacgroundstudent">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="15dp"
        android:background="#3c838383"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <RelativeLayout
            android:id="@+id/relativeLayout7"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:background="@drawable/ic_circle"

            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="111dp">

            <RelativeLayout

                android:background="@drawable/ic_blackboard_empty"
                android:layout_width="110dp"
                android:layout_height="110dp"


                android:id="@+id/relativeLayout6"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true">

            </RelativeLayout>

            <TextView
                android:textSize="20sp"
                android:id="@+id/textView3"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#2a4531"
                android:text="Create your timetable!"
                android:layout_below="@+id/relativeLayout6"
                android:layout_centerHorizontal="true" />

            <TextView
                android:textSize="13sp"
                android:textColor="#2a4531"

                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="And you will never miss a class..."
                android:layout_below="@+id/textView3"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:layout_height="30dp"
            android:id="@+id/linearLayout4"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:textColor="#fff"
                android:layout_marginTop="6dp"
                android:text="Monday"
                android:textSize="13sp"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/monday"
                android:layout_weight="1" />

            <TextView
                android:textSize="13sp"
                android:textColor="#fff"
                android:gravity="center"
                android:layout_marginTop="6dp"
                android:text="Tuesday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tuesday"
                android:layout_weight="1" />

            <TextView
                android:textColor="#fff"
                android:gravity="center"
                android:layout_marginTop="6dp"
                android:text="Wednesday"
                android:textSize="13sp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/wednesday"
                android:layout_weight="1" />

            <TextView
                android:textSize="13sp"
                android:textColor="#fff"
                android:gravity="center"
                android:layout_marginTop="6dp"
                android:text="Thursday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/thursday"
                android:layout_weight="1" />

            <TextView
                android:textSize="13sp"
                android:textColor="#fff"
                android:gravity="center"
                android:layout_marginTop="6dp"
                android:text="Friday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/friday"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"

           android:layout_height="match_parent"
            android:layout_marginTop="15dp"

            android:id="@+id/linearLayout3"
            android:layout_above="@+id/button5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayout4">

            <ListView
                android:id="@+id/monday_listView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:divider="@null" />

            <ListView
                android:divider="@null"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/tuesday_listView"
                android:layout_width="0dp" />

            <ListView
                android:divider="@null"
                android:id="@+id/wednesday_listView"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <ListView
                android:divider="@null"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/thursday_listView"
                android:layout_width="0dp" />

            <ListView
                android:divider="@null"
                android:id="@+id/friday_listView"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <android.support.design.widget.FloatingActionButton

            android:background="@drawable/ic_pencilst"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:backgroundTint="@color/colorPrimary"
            app:rippleColor="#89ba97"


            android:src="@mipmap/ic_pencil_floating_btn"
            android:id="@+id/button5"

            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="15dp" />

    </RelativeLayout>






</RelativeLayout>
