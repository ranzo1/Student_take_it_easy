<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    >

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        card_view:cardBackgroundColor="#f9f9f9"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="3dp"
        android:id="@+id/cardViewtimeTable"

        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <RelativeLayout
            android:id="@+id/relativeLayout15"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            >


            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="80dp"
                android:layout_height="80dp"

                card_view:cardBackgroundColor="#f9f9f9"
                card_view:cardCornerRadius="3dp"
                card_view:cardElevation="5dp"
                android:id="@+id/cardViewEvent"

                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView

                        android:text="May"
                        android:background="#c8507c5c"
                        android:textColor="#fff"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewMonth">


                    </TextView>

                    <TextView
                        android:id="@+id/textViewMontNumber"
                        android:textColor="#0d0d0d"
                        android:text="21"
                        android:textSize="30sp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/textViewMonth"
                        android:layout_above="@+id/vreme">


                    </TextView>

                    <TextView
                        android:textColor="#ffffff"
                        android:background="#c87e7e7e"
                        android:id="@+id/vreme"
                        android:text="21:00"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true">


                    </TextView>


                </RelativeLayout>



            </android.support.v7.widget.CardView>


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_clock2"

                android:layout_toRightOf="@+id/imageView2222"
                android:layout_alignBottom="@+id/timeEventAdd"
                android:layout_alignTop="@+id/timeEventAdd" />



            <TextView
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:id="@+id/textGornjideo"
                android:layout_width="190dp"
                android:layout_height="52dp"
                android:text="TextView"
                android:textColor="#232323"
                android:textStyle="bold"
                android:layout_alignTop="@+id/cardViewEvent"
                android:layout_toRightOf="@+id/imageView2"
                android:layout_toEndOf="@+id/imageView2" />

            <TextView
                android:layout_marginBottom="5dp"
                android:id="@+id/timeEventAdd"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="TextView"
                android:textSize="14sp"
                android:textColor="#232323"

                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/imageView2"
                android:layout_toEndOf="@+id/imageView2" />

            <TextView
                android:id="@+id/imageView2222"
                android:layout_width="10dp"
                android:layout_height="match_parent"

                android:background="@color/colorPrimary"
                android:gravity="center"
                android:textColor="#080808"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>




</RelativeLayout>