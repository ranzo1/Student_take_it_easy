<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_notes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/ic_bacgroundstudent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ranzo1.student_app.mainActivities.NotesActivity"
    tools:showIn="@layout/activity_notes">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#46838383"

        android:paddingBottom="@dimen/activity_vertical_margin"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <GridView
            android:id="@+id/notes_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:numColumns="3"
            android:verticalSpacing="2dp"
            android:horizontalSpacing="2dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/card" />

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foregroundGravity="center"
            card_view:cardBackgroundColor="#fffefe"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="4dp"
            android:layout_marginTop="5dp"
            android:id="@+id/card"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="5dp"
            android:layout_above="@+id/card6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <RelativeLayout


                android:id="@+id/relativeLayout8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


               >

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

            </RelativeLayout>


        </android.support.v7.widget.CardView>



        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout7"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:background="@drawable/ic_circle"

            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">

            <RelativeLayout

                android:background="@drawable/ic_note_empty"
                android:layout_width="110dp"
                android:layout_height="110dp"


                android:id="@+id/relativeLayout6"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true">

            </RelativeLayout>

            <TextView
                android:textSize="20sp"
                android:id="@+id/textView3"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#2a4531"
                android:text="Write colorful notes!"
                android:layout_below="@+id/relativeLayout6"
                android:layout_centerHorizontal="true" />

            <TextView
                android:textSize="13sp"
                android:textColor="#2a4531"

                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Use it in context of subjects,or other..."
                android:layout_below="@+id/textView3"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>







        <com.nightonke.boommenu.BoomMenuButton
            android:id="@+id/bmb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bmb_normalColor="@color/colorPrimary"
            app:bmb_buttonEnum="textInsideCircle"
            app:bmb_piecePlaceEnum="piecePlace_dot_2_1"
            app:bmb_buttonPlaceEnum="buttonPlace_sc_2_1"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />




    </RelativeLayout>






